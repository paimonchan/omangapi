<odoo>
    <record model="ir.ui.view" id="manga_tree">
        <field name="name">manga tree</field>
        <field name="model">manga</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="source"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="content_rating"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="manga_form">
        <field name="name">manga form</field>
        <field name="model">manga</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="source"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="content_rating"/>
                        </group>
                        <group>
                            <field name="source_id"/>
                            <field name="source"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" widget="text"/>
                        </page>
                        <!-- TODO: create dedicated view for anima.attribute -->
                        <page string="Alternative Names">
                            <field name="title_ids">
                                <tree>
                                    <field name="lang"/>
                                    <field name="name"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="lang"/>
                                        <field name="type"/>
                                    </group>
                                    <field name="name"/>
                                </form>
                            </field>
                        </page>
                        <page string="Alternative Description">
                            <field name="description_ids">
                                <tree>
                                    <field name="lang"/>
                                    <field name="name"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="lang"/>
                                        <field name="type"/>
                                    </group>
                                    <field name="name"/>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="manga_search">
        <field name="name">manga form</field>
        <field name="model">manga</field>
        <field name="arch" type="xml">
            <search>
                <field 
                    name="name" string="Product" 
                    filter_domain="['|', ('name', 'ilike', self), ('title_normalize', 'ilike', self)]"/>
                <separator/>
                <filter string="Ongoing" name="services" domain="[('state','=','ongonig')]"/>
                <filter string="Complete" name="services" domain="[('state','=','completed')]"/>
                <group expand="1" string="Group By">
                    <filter string="State" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <act_window
        name="Manga"
        id="manga_action"
        res_model="manga"
        view_mode="tree,form"
        target="current"/>
</odoo>